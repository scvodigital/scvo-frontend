{
  "name": "funding_updates_link_gen",
  "pattern": "/funding/updates/link-generator",
  "tasks": [
    {
      "name": "supplimentaryResponses",
      "taskModule": "elasticsearch",
      "config": {
        "connectionStringTemplate": "{$../../elasticsearch-url.txt}",
        "elasticsearchConfig": {
          "apiVersion": "5.6"
        },
        "queryTemplates": [
          {
            "name": "splash",
            "index": "web-content-production",
            "type": "scvo-cms-media",
            "template": ">context.metaData.handlebars.queries.pages_gathering-splash"
          }
        ]
      },
      "renderer": "handlebars"
    },
    {
      "name": "destination",
      "taskModule": "renderLayout",
      "renderer": "handlebars",
      "config": {
        "logic": {
          "if": [
            "default"
          ]
        },
        "output": "body",
        "layouts": {
          "default": {
            "layout": ">context.metaData.handlebars.layouts.default",
            "parts": {
              "head": ">context.metaData.handlebars.templates.funding_funding-updates-head-tags",
              "body": ">context.metaData.handlebars.templates.funding_funding-updates-link-gen",
              "foot": ""
            },
            "contentType": "text/html"
          }
        }
      }
    }
  ]
}